<div class="main users-login">
    <div class="container">
      <div class="login">Login</div>
      <% if @error_message%>
       <div class="error_message">
          <%= @error_message%>
       </div>
       <% end %>
        <div class="login-form">
          <%=form_tag("/login") do%>
            <input class="input" name="email" placeholder="メールアドレス" value="<%=@email%>">
            <input class="input" name="password" placeholder="パスワード(6文字以上12文字以下の英数字)" value="<%=@password%>">
            <input class="login-button"type="submit" value="login">
          <% end %>
        </div>
    </div>
</div>