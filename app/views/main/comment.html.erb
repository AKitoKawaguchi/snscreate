<div class="main main-comment">
  <div class="post-item">
    <div class="comment-username">
    <%= link_to(@post.user.name,"/users/#{@post.user.id}") %>
      <%=image_tag "/user_images/#{@post.user.image_name}", size: "60x60", style: "object-fit:cover; border-radius: 60px;" %>
    </div>
    <div class="comment-content">
      <%=@post.content%>
    </div>
  </div>
  <span class="fa-solid fa-arrow-down-long fa-3x"></span>
  <%=form_tag("/main/#{@post.id}/reply") do %>
    <textarea name="comment" class="post-comment-item"></textarea>
    <input type="submit" value="返信"></input>
  <% end %>
</div>